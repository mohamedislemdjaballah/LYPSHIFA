<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/clearbackground"
    tools:context=".ui.home.HomeFragment">


    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal"

        app:layout_constraintBottom_toTopOf="@+id/TasksLinearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <EditText

            android:id="@+id/seachTxt"
            android:layout_width="260dp"
            android:layout_height="match_parent"
            android:background="@drawable/rectangle"
            android:drawableEnd="@drawable/baseline_search_24"
            android:fontFamily="@font/poppins_mediumitalic"
            android:hint="@string/search"
            android:inputType="textAutoComplete"
            android:padding="1dp"
            android:paddingStart="13dp"
            android:paddingEnd="5dp"
            android:textAlignment="textStart"
            android:textColor="@color/dark_Grey"
            android:textColorHint="@color/grey"
            android:textSize="14sp"
            tools:ignore="TouchTargetSizeCheck" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:contentDescription="@string/notification"
            android:padding="8dp"
            android:src="@drawable/baseline_notifications_none_24"
            tools:ignore="TouchTargetSizeCheck" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:contentDescription="@string/setting"
            android:padding="8dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:src="@drawable/setting_none"
            tools:ignore="TouchTargetSizeCheck" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/TasksLinearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="85dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="1dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/scrollView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/medicalAnalys1btn"
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:layout_margin="0dp"
            android:layout_weight="1"
            android:background="@drawable/rectangle"
            android:fontFamily="@font/poppins_medium"
            android:text="Review Medical Test" />

        <Button
            android:id="@+id/quicksScanBtn"
            android:layout_width="130dp"
            android:layout_height="230dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/rectangle"
            android:fontFamily="@font/poppins_medium"
            android:text="Qiuck Test" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TasksLinearLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/button8"
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:background="@drawable/rectangle"
                android:fontFamily="@font/poppins_bold"
                android:text="Article " />

            <Button
                android:id="@+id/button9"
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/rectangle"
                android:fontFamily="@font/poppins_bold"
                android:text="Article " />

            <Button
                android:id="@+id/button10"
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/rectangle"
                android:fontFamily="@font/poppins_bold"
                android:text="Article " />

            <Button
                android:id="@+id/button4"
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/rectangle"
                android:fontFamily="@font/poppins_bold"
                android:text="Article " />

            <Button
                android:id="@+id/button5"
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/rectangle"
                android:fontFamily="@font/poppins_bold"
                android:text="Article " />

            <Button
                android:id="@+id/button6"
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/rectangle"
                android:fontFamily="@font/poppins_bold"
                android:text="Article " />

            <Button
                android:id="@+id/button7"
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/rectangle"
                android:fontFamily="@font/poppins_bold"
                android:text="Article " />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>